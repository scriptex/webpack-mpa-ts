{
	"name": "webpack-mpa-ts",
	"version": "3.11.0",
	"description": "Multi page app setup with webpack",
	"scripts": {
		"build": "webpack --mode=production",
		"start": "webpack --watch --mode=development",
		"optisize": "optisize --src=\"./assets/images\"",
		"html": "php index.php > index.html",
		"critical": "node critical.js",
		"rm-html": "rm index.html",
		"pwa": "create-pwa --icon=\"./assets/images/favicon/icon.png\" --launch=\"./assets/images/favicon/launch.png\"",
		"prod": "yarn build && yarn html && yarn critical && yarn rm-html",
		"lint:ts": "eslint 'assets/scripts/**/*.ts'",
		"lint:scss": "stylelint assets/styles/**/*.scss",
		"lint": "yarn lint:ts && yarn lint:scss"
	},
	"keywords": [
		"MPA",
		"webpack",
		"setup",
		"multi-page"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/webpack-mpa",
	"bugs": {
		"url": "https://github.com/scriptex/webpack-mpa/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"itscss": "3.0.0"
	},
	"devDependencies": {
		"@three11/optisize": "2.0.0",
		"@types/node": "16.11.26",
		"@typescript-eslint/eslint-plugin": "5.16.0",
		"@typescript-eslint/parser": "5.16.0",
		"autoprefixer": "10.4.4",
		"browser-sync": "2.27.9",
		"browser-sync-webpack-plugin": "2.3.0",
		"browserslist": "4.20.2",
		"clean-webpack-plugin": "4.0.0",
		"create-pwa": "2.4.0",
		"critical": "4.0.1",
		"css-loader": "6.7.1",
		"cssnano": "5.1.5",
		"eslint": "8.11.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-config-recommended": "4.1.0",
		"eslint-plugin-compat": "4.0.2",
		"mini-css-extract-plugin": "2.6.0",
		"node-sass-magic-importer": "5.3.2",
		"postcss": "8.4.12",
		"postcss-cli": "9.1.0",
		"postcss-easy-import": "4.0.0",
		"postcss-flexbugs-fixes": "5.0.2",
		"postcss-loader": "6.2.1",
		"postcss-merge-rules": "5.1.0",
		"postcss-normalize": "10.0.1",
		"postcss-url": "10.1.3",
		"postcss-utilities": "0.8.4",
		"postcss-watch-folder": "2.0.0",
		"sass": "1.49.9",
		"sass-loader": "12.6.0",
		"source-map-loader": "3.0.1",
		"spritesh": "1.2.1",
		"stylelint": "14.6.0",
		"stylelint-config-recommended": "7.0.0",
		"stylelint-config-standard-scss": "3.0.0",
		"stylelint-no-unsupported-browser-features": "5.0.3",
		"stylelint-scss": "4.2.0",
		"svgo": "2.8.0",
		"ts-loader": "9.2.8",
		"typescript": "4.6.2",
		"webpack": "5.70.0",
		"webpack-cli": "4.9.2",
		"webpack-shell-plugin-next": "2.2.2",
		"webpack-spritesmith": "1.1.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"main": "assets/scripts/main.ts",
	"private": false,
	"bin": {
		"wmpats": "./bin/cli.js"
	}
}

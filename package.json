{
	"name": "webpack-mpa-ts",
	"version": "3.8.0",
	"description": "Multi page app setup with webpack",
	"scripts": {
		"build": "webpack --mode=production",
		"start": "webpack --watch --mode=development",
		"optisize": "optisize --src=\"./assets/images\"",
		"html": "php index.php > index.html",
		"critical": "node critical.js",
		"rm-html": "rm index.html",
		"pwa": "create-pwa --icon=\"./assets/images/favicon/icon.png\" --launch=\"./assets/images/favicon/launch.png\"",
		"prod": "yarn build && yarn html && yarn critical && yarn rm-html",
		"lint:ts": "tslint -p tsconfig.json -c tslint.json 'assets/scripts/**/*.ts'",
		"lint:scss": "stylelint assets/styles/**/*.scss",
		"lint": "yarn lint:ts && yarn lint:scss"
	},
	"keywords": [
		"MPA",
		"webpack",
		"setup",
		"multi-page"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/webpack-mpa",
	"bugs": {
		"url": "https://github.com/scriptex/webpack-mpa/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"itscss": "1.6.0"
	},
	"devDependencies": {
		"@three11/optisize": "1.3.0",
		"@types/browser-sync": "2.26.1",
		"@types/browser-sync-webpack-plugin": "2.2.1",
		"@types/clean-webpack-plugin": "0.1.3",
		"@types/cssnano": "4.0.0",
		"@types/extract-text-webpack-plugin": "3.0.5",
		"@types/mini-css-extract-plugin": "2.0.0",
		"@types/node": "15.12.5",
		"@types/postcss-flexbugs-fixes": "4.2.0",
		"@types/postcss-url": "8.0.1",
		"@types/svgo": "2.3.1",
		"@types/webpack": "5.28.0",
		"@types/webpack-shell-plugin": "0.5.3",
		"@types/yargs": "17.0.1",
		"autoprefixer": "10.2.6",
		"browser-sync": "2.27.4",
		"browser-sync-webpack-plugin": "2.3.0",
		"browserslist": "4.16.6",
		"clean-webpack-plugin": "1.0.1",
		"create-pwa": "2.3.1",
		"critical": "4.0.0",
		"css-loader": "5.2.6",
		"cssnano": "5.0.6",
		"file-loader": "6.2.0",
		"mini-css-extract-plugin": "2.0.0",
		"node-sass": "6.0.1",
		"node-sass-magic-importer": "5.3.2",
		"postcss": "8.3.5",
		"postcss-cli": "8.3.1",
		"postcss-easy-import": "3.0.0",
		"postcss-flexbugs-fixes": "5.0.2",
		"postcss-loader": "6.1.1",
		"postcss-merge-rules": "5.0.2",
		"postcss-normalize": "10.0.0",
		"postcss-url": "10.1.3",
		"postcss-utilities": "0.8.4",
		"postcss-watch-folder": "1.1.0",
		"sass-loader": "12.1.0",
		"source-map-loader": "3.0.0",
		"spritesh": "1.2.1",
		"stylelint": "13.13.1",
		"stylelint-config-recommended": "5.0.0",
		"svgo": "2.3.1",
		"ts-loader": "9.2.3",

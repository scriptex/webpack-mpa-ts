{
	"name": "webpack-mpa-ts",
	"version": "3.6.0",
	"description": "Multi page app setup with webpack",
	"scripts": {
		"build": "webpack --NODE_ENV=production",
		"start": "webpack --watch --NODE_ENV=development",
		"optisize": "optisize --src=\"./assets/images\"",
		"html": "php index.php > index.html",
		"critical": "critical index.html > assets/dist/critical.css",
		"rm-html": "rm index.html",
		"pwa": "create-pwa --icon=\"./assets/images/favicon/icon.png\" --launch=\"./assets/images/favicon/launch.png\"",
		"prod": "yarn build && yarn html && yarn critical && yarn rm-html",
		"lint:ts": "tslint -p tsconfig.json -c tslint.json 'assets/scripts/**/*.ts'",
		"lint:scss": "stylelint assets/styles/**/*.scss",
		"lint": "yarn lint:ts && yarn lint:scss"
	},
	"keywords": [
		"MPA",
		"webpack",
		"setup",
		"multi-page"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/webpack-mpa",
	"bugs": {
		"url": "https://github.com/scriptex/webpack-mpa/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"itscss": "1.4.0"
	},
	"devDependencies": {
		"@three11/optisize": "1.3.0",
		"@types/autoprefixer": "9.7.2",
		"@types/browser-sync": "2.26.1",
		"@types/browser-sync-webpack-plugin": "2.2.0",
		"@types/clean-webpack-plugin": "0.1.3",
		"@types/cssnano": "4.0.0",
		"@types/extract-text-webpack-plugin": "3.0.4",
		"@types/mini-css-extract-plugin": "1.2.1",
		"@types/node": "14.14.9",
		"@types/postcss-flexbugs-fixes": "4.2.0",
		"@types/postcss-url": "8.0.1",
		"@types/svgo": "1.3.3",
		"@types/webpack": "4.41.25",
		"@types/yargs": "15.0.10",
		"autoprefixer": "9.8.6",
		"awesome-typescript-loader": "5.2.1",
		"browser-sync": "2.26.13",
		"browser-sync-webpack-plugin": "2.2.2",
		"clean-webpack-plugin": "1.0.1",
		"create-pwa": "2.3.0",
		"critical": "2.0.6",
		"css-loader": "5.0.1",
		"cssnano": "4.1.10",
		"file-loader": "6.2.0",
		"mini-css-extract-plugin": "1.3.1",
		"node-sass": "4.14.1",
		"node-sass-magic-importer": "5.3.2",
		"postcss": "8.1.8",
		"postcss-easy-import": "3.0.0",
		"postcss-flexbugs-fixes": "5.0.1",
		"postcss-loader": "4.1.0",
		"postcss-merge-rules": "4.0.3",
		"postcss-url": "10.1.0",
		"postcss-utilities": "0.8.4",
		"postcss-watch-folder": "1.0.0",
		"sass-loader": "10.1.0",
		"source-map-loader": "1.1.2",
		"spritesh": "1.2.1",
		"stylelint": "13.8.0",
		"stylelint-config-recommended": "3.0.0",
		"ts-node": "9.0.0",
		"tslint": "6.1.3",
		"tslint-config-prettier": "1.18.0",
		"typescript": "4.1.2",
		"webpack": "4.44.2",
		"webpack-cli": "3.3.12",
		"webpack-shell-plugin": "0.5.0",
		"webpack-spritesmith": "1.1.0",
		"yargs": "16.1.1"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"main": "assets/scripts/main.ts",
	"private": false,
	"bin": {
		"wmpats": "./bin/cli.js"
	}
}
